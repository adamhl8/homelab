#!/bin/bash

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

nvm_old=$(nvm current)

if [ ${nvm_old} = "none" ]; then nvm install node;
else nvm install node --reinstall-packages-from=node; fi
nvm install-latest-npm

nvm_new=$(nvm current)
[[ ${nvm_old} != ${nvm_new} && ${nvm_old} != "none" ]] && nvm uninstall ${nvm_old}