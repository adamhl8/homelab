#/bin/bash

cat << EOF
Manual backup:
  - Vaultwarden
  - Uptime Kuma
  - Sonarr
  - Radarr
EOF

mkdir ~/backup/

# Discord bots
cp -r ~/apps/discord-app-bot/ ~/backup/
cp -r ~/apps/eyir/ ~/backup/

# reaction-light
mkdir ~/backup/reaction-light/
cp -r ~/apps/reaction-light/data/ ~/backup/reaction-light/
cp ~/apps/reaction-light/config.ini ~/backup/reaction-light/

# n8n
mkdir ~/backup/n8n/
cp -r ~/apps/n8n/data/ ~/backup/n8n/

# xbackbone
mkdir ~/backup/xbackbone/
cp -r ~/apps/xbackbone/data/ ~/backup/xbackbone/

# webtop
mkdir ~/backup/webtop/
cp -r ~/apps/webtop/data/ ~/backup/webtop/

# compress backup
tar -vczf backup.tar.gz backup/ &>> backup.log